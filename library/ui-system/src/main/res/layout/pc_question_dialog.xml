<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.boreal.commonutils.component.roundablelayout.CURoundableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="10dp"
                app:cu_cornerAll="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textColor="@color/black_700"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Â¿Pregunta?" />

                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="43dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:textColor="@color/fill_text_selector"
                    app:layout_constraintEnd_toEndOf="@+id/btnContinue"
                    app:layout_constraintStart_toStartOf="@+id/btnCancel"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitle"
                    tools:gravity="center"
                    tools:text="Texto mensaje" />

                <com.boreal.commonutils.component.roundablelayout.CURoundableLayout
                    android:id="@+id/btnCancel"
                    android:layout_width="113dp"
                    android:layout_height="57dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="67dp"
                    android:layout_marginBottom="26dp"
                    app:cu_backgroundColor="@color/white"
                    app:cu_cornerAll="10dp"
                    app:cu_strokeLineColor="@color/primary_700"
                    app:cu_strokeLineWidth="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtMessage">

                    <TextView
                        android:id="@+id/txtBtnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        tools:text="@string/cancelar"
                        android:textColor="@color/primary_700"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </com.boreal.commonutils.component.roundablelayout.CURoundableLayout>

                <com.boreal.commonutils.component.roundablelayout.CURoundableLayout
                    android:id="@+id/btnContinue"
                    android:layout_width="113dp"
                    android:layout_height="57dp"
                    android:layout_marginTop="67dp"
                    android:layout_marginEnd="26dp"
                    android:layout_marginBottom="26dp"
                    app:cu_backgroundColor="@color/primary_700"
                    app:cu_cornerAll="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.763"
                    app:layout_constraintStart_toEndOf="@+id/roundableCamera"
                    app:layout_constraintTop_toBottomOf="@+id/txtMessage"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:id="@+id/txtBtnContinue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/to_redeem_text"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </com.boreal.commonutils.component.roundablelayout.CURoundableLayout>

            </com.boreal.commonutils.component.roundablelayout.CURoundableLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</layout>